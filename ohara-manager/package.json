{
  "name": "ohara-manager",
  "version": "0.1.0",
  "private": true,
  "main": "index.js",
  "engines": {
    "node": ">=8.10.0"
  },
  "scripts": {
    "checkYarnVersion": "node ./scripts/yarnVersionCheck.js",
    "setup": "yarn && yarn --cwd client setup",
    "setup:prod": "yarn --prod && yarn --cwd client setup:prod",
    "start": "forever start index.js",
    "start:prod": "node index.js",
    "dev": "nodemon index.js --exec 'yarn lint:server && node'",
    "start:client": "BROWSER=none yarn --cwd client start:ci",
    "lint": "yarn lint:server && yarn lint:client",
    "lint:server": "eslint --ignore-pattern \"/client\" --ignore-pattern \"/coverage\" \"**/*.js\"",
    "lint:client": "yarn --cwd client lint",
    "test": "jest",
    "test:report": "JEST_JUNIT_OUTPUT=\"./test-reports/serverUnits.xml\" yarn test --reporters=default --reporters=jest-junit",
    "test:watch": "yarn test --watch",
    "test:coverage": "yarn test --coverage",
    "test:ci": "yarn setup && yarn test:all && yarn clean:process",
    "test:all": "yarn test:report && yarn test:client:unit && yarn test:client:e2e",
    "test:client:unit": "yarn --cwd client test:report",
    "test:client:e2e": "yarn start:client & wait-on http://localhost:3000 && yarn start --configurator http://fakehost:7777/v0 & wait-on http://localhost:5050 && yarn --cwd client cypress:ci",
    "clean": "yarn clean:client && yarn clean:server",
    "clean:process": "forever stopall",
    "clean:server": "rm -rf ./test-reports node_modules",
    "clean:client": "rm -rf ./client/node_modules ./client/build",
    "format": "prettier --single-quote --trailing-comma all --write \"**/*.js\"",
    "prepush": "yarn lint && yarn test:all && yarn format"
  },
  "dependencies": {
    "axios": "0.18.0",
    "body-parser": "1.18.3",
    "chalk": "2.4.1",
    "compression": "1.7.2",
    "express": "4.16.3",
    "forever": "0.15.3",
    "lodash": "4.17.10",
    "morgan": "1.9.0",
    "yargs": "12.0.2"
  },
  "devDependencies": {
    "babel-eslint": "8.2.6",
    "eslint": "5.2.0",
    "eslint-plugin-node": "7.0.1",
    "jest": "23.4.1",
    "jest-junit": "5.1.0",
    "moxios": "0.4.0",
    "nodemon": "1.17.5",
    "prettier": "1.13.7",
    "supertest": "3.1.0",
    "wait-on": "2.1.0"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "<rootDir>/client"
    ],
    "collectCoverageFrom": [
      "**/*.js",
      "!**/client/**",
      "!**/coverage/**",
      "!**/node_modules/**"
    ]
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:node/recommended"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 6
    },
    "env": {
      "es6": true,
      "node": true,
      "jest": true
    },
    "rules": {
      "no-console": "warn",
      "no-debugger": "warn",
      "node/no-unpublished-require": "off"
    }
  },
  "nodemonConfig": {
    "ignore": [
      "client/*"
    ]
  }
}
