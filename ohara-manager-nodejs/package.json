{
  "name": "ohara-manager",
  "version": "0.1.0",
  "private": true,
  "main": "index.js",
  "scripts": {
    "setup": "yarn && yarn --cwd client setup",
    "start": "nodemon index.js",
    "start:client": "yarn --cwd client start",
    "test": "jest",
    "test:junit": "JEST_JUNIT_OUTPUT=\"./testReports/serverUnits.xml\" yarn test --reporters=default --reporters=jest-junit",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "npm-run-all test:junit test:client:*",
    "test:all": "npm-run-all test test:client:*",
    "test:client:unit": "CI=true yarn --cwd client test",
    "test:client:e2e": "yarn start:client & wait-on http://localhost:3000 && yarn --cwd client cypress:ci"
  },
  "dependencies": {
    "axios": "0.18.0",
    "body-parser": "1.18.3",
    "chalk": "2.4.1",
    "compression": "1.7.2",
    "express": "4.16.3"
  },
  "devDependencies": {
    "jest": "23.4.1",
    "jest-junit": "5.1.0",
    "moxios": "0.4.0",
    "nodemon": "^1.17.5",
    "npm-run-all": "4.1.3",
    "supertest": "3.1.0",
    "wait-on": "2.1.0"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "<rootDir>/client"
    ],
    "collectCoverageFrom": [
      "**/*.{js}",
      "!**/client/**",
      "!**/coverage/**",
      "!**/node_modules/**"
    ]
  }
}
