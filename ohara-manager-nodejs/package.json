{
  "name": "ohara-manager",
  "version": "0.1.0",
  "private": true,
  "main": "index.js",
  "scripts": {
    "setup": "yarn && yarn --cwd client setup",
    "start": "nodemon index.js",
    "start:client": "BROWSER=none yarn --cwd client start",
    "test": "jest",
    "test:report": "JEST_JUNIT_OUTPUT=\"./testReports/serverUnits.xml\" yarn test --reporters=default --reporters=jest-junit",
    "test:watch": "yarn test --watch",
    "test:coverage": "yarn test --coverage",
    "test:ci": "yarn setup && yarn test:all && kill-port 3000",
    "test:all": "yarn test:report && yarn test:client:unit && yarn test:client:e2e",
    "test:client:unit": "yarn --cwd client test:report",
    "test:client:e2e": "yarn start:client & wait-on http://localhost:3000 && yarn --cwd client cypress:ci",
    "clean": "yarn clean:client && yarn clean:server",
    "clean:server": "rm -rf ./testReports node_modules",
    "clean:client": "rm -rf ./client/node_modules ./client/build"
  },
  "dependencies": {
    "axios": "0.18.0",
    "body-parser": "1.18.3",
    "chalk": "2.4.1",
    "compression": "1.7.2",
    "express": "4.16.3"
  },
  "devDependencies": {
    "jest": "23.4.1",
    "jest-junit": "5.1.0",
    "kill-port": "1.3.1",
    "moxios": "0.4.0",
    "nodemon": "^1.17.5",
    "supertest": "3.1.0",
    "wait-on": "2.1.0"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "<rootDir>/client"
    ],
    "collectCoverageFrom": [
      "**/*.js",
      "!**/client/**",
      "!**/coverage/**",
      "!**/node_modules/**"
    ]
  }
}
